<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <size android:width="35dp" android:height="35dp" />
            <padding
                android:left="5dp"
                android:right="5dp"
                android:bottom="10dp"
                android:top="10dp" />
            <solid android:color="#58FF00" />

            <corners android:radius="20dp" />

            <stroke android:color="#8C545E" android:width="3dp"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle" >
            <size android:width="35dp" android:height="35dp" />
            <padding
                android:left="5dp"
                android:right="5dp"
                android:bottom="10dp"
                android:top="10dp" />
            <solid android:color="#8C545E" />

            <corners android:radius="20dp" />

            <stroke android:color="#000" android:width="2dp"/>
        </shape>
    </item>
</selector>
